<%- include ("adminHead.ejs") %>

<body>
    <div class="form-container">    
        <% if (error) { %>
            <div class="alert alert-danger" role="alert">
                <%= message %>
            </div>
        <% } %>
                
        
            <h2>Edit Category</h2>
               <div class="container">
                   <form action="/admin/update-cat/<%= category._id %>" method="POST">
                <div class="form-group">
                    <label for="name">Category Name</label>
                    <% if (error === true) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= message %>
                        </div>
                    <% } %>
                    <input type="text" id="name" name="name" value="<%= category.name %>" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" rows="4" required><%= category.description %></textarea>
                </div>
                <div class="form-group">
                    <label for="discount">Discount</label>
                    <input type="number" id="discount" name="discount" value="<%= category.discount %>" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Update Category</button>
                    <a href="/admin/cat-list" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</body>

<%- include ("adminFooter.ejs") %>

<style>
  

    .form-container {
        width: 50%;
        margin: auto;
    max-height: auto;
    margin: 0 auto;
    margin-top: 10%;
    padding: 10px;
    margin-bottom: 10%;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        font-weight: bold;
    }

    input[type="text"],
    input[type="number"],
    textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    button[type="submit"],
    a.btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    button[type="submit"]:hover,
    a.btn:hover {
        background-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }
</style>
