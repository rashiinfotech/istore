<%- include("adminHead.ejs") %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
    /* Add your specific styles for edit-coupon page */
</style>

<div class="sidebar-overlay" id="sidebar-overlay"></div>
<div class="sidebar-mobile-menu-handle" id="sidebar-mobile-menu-handle"></div>
<div class="mobile-menu-handle"></div>
<article class="content">
    <% if (successMessage) { %>
        <div class="alert alert-success" role="alert">
            <%= successMessage %>
        </div>
    <% } %>

    <% if (errorMessage) { %>
        <div class="alert alert-danger" role="alert">
            <%= errorMessage %>
        </div>
    <% } %>

    <div class="title-block">
        <h3 class="title">Edit Coupon</h3>
    </div>
    <a href="/admin/coupons" class="btn btn-primary" >Back to Coupons</a>

    <form action="/admin/update-coupon/<%= coupon._id %>" method="POST">
        <div class="form-group">
            <label for="couponCode">Coupon Code</label>
            <input type="text" class="form-control" id="couponCode" name="couponCode" value="<%= coupon.couponCode %>" required>
        </div>
        <div class="form-group">
            <label for="type">Type</label>
            <input type="text" class="form-control" id="type" name="type" value="<%= coupon.type %>" required>
        </div>
        <div class="form-group">
            <label for="discount">Discount (%)</label>
            <input type="number" class="form-control" id="discount" name="discount" value="<%= coupon.discount %>" required>
        </div>
        <div class="form-group">
            <label for="expiry">Expiration Date</label>
            <input type="date" class="form-control" id="expiry" name="expiry" value="<%= coupon.expiry.toISOString().substring(0, 10) %>" required>
        </div>
        <div class="form-group">
            <label for="maxRedeem">Maximum Redemption</label>
            <input type="number" class="form-control" id="maxRedeem" name="maxRedeem" value="<%= coupon.maxRedeem %>" required>
        </div>
        <div class="form-group">
            <label for="minimumPrice">Minimum Price</label>
            <input type="number" class="form-control" id="minimumPrice" name="minimumPrice" value="<%= coupon.minimumPrice %>" required>
        </div>
        <div class="form-group">
            <label for="status">Status</label>
            <select class="form-control" id="status" name="status" required>
                <option value="true" <%= coupon.status ? 'selected' : '' %>>Active</option>
                <option value="false" <%= !coupon.status ? 'selected' : '' %>>Inactive</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Update Coupon</button>
    </form>
</article>

