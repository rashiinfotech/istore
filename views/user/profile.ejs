<%- include ('header.ejs') %>

<!-- Include CSS styles -->
<style>
    .edit-profile {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
    }

    .profile-picture img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        border: 2px solid #ccc;
    }

    .profile-info p {
        margin-bottom: 10px;
    }

    .profile-box {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
    }

    .card {
        margin-bottom: 20px;
    }

    .account-nav {
        margin-top: 30px;
    }

    .account-nav .btn {
        margin-bottom: 10px;
    }
</style>

<!-- MAIN CONTENT -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="edit-profile">
                <h1 class="text-center mb-4">User Profile</h1>
                <div class="user-details">
                    <div class="profile-picture text-center">
                        <!-- Add user profile picture here -->
                        <!-- <img src="user_profile_picture.jpg" alt="Profile Picture"> -->
                    </div>
                    <div class="profile-info mt-4">
                        <p><strong>Username:</strong> <%= user.username %></p>
                        <p><strong>Email:</strong> <%= user.email %></p>
                        <p><strong>Mobile:</strong> <%= user.phone %></p>
                        <p><strong>Primary Address:</strong> <%= user.address %></p>
                        <!-- Include other profile details like name, address, etc. here -->
                    </div>
                </div>
            </div>
            
            <!-- Address section -->
            <div class="profile-box mt-4 mb-4">
                <h2 class="mb-4">Address</h2>
                <div class="profile-address">
                    <% if (address.length > 0) { %> 
                        <% address.forEach((address) => { %>
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p class="card-text"><strong>Address:</strong> <%= address.addressLine1 %></p>
                                            <p class="card-text"><strong>Street:</strong> <%= address.street %></p>
                                            <p class="card-text"><strong>City:</strong> <%= address.city %></p>
                                        </div>
                                        <div class="col-md-6">
                                            <p class="card-text"><strong>State:</strong> <%= address.state %></p>
                                            <p class="card-text"><strong>Pincode:</strong> <%= address.ZIP %></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %> 
                    <% } else { %>
                        <p>No address found.</p>
                    <% } %>
                </div>
            </div>
            
            <!-- Navigation -->
            <nav class="account-nav">
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <a href="/edit-profile" class="btn btn-success w-100">Edit Profile</a> 
                        <a href="/orders" class="btn btn-primary w-100">My Orders</a>
                        <a href="/resetpassword" class="btn btn-warning w-100">Reset Password</a>
                        <a href="/coupons" class="btn btn-info w-100">Coupons</a>
                        <a href="/wallet" class="btn btn-success w-100">Wallet</a>
                        <a href="/address" class="btn btn-warning w-100">Addresses</a>
                        <a href="/logout" class="btn btn-danger w-100">Logout</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
<!-- /MAIN CONTENT -->

<%- include ("footer.ejs") %>