    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <!-- Theme initialization -->
    <script>
        var themeSettings = (localStorage.getItem('themeSettings')) ? JSON.parse(localStorage.getItem('themeSettings')) : {};
        var themeName = themeSettings.themeName || '';
        if (themeName) {
            document.write('<link rel="stylesheet" id="theme-style" href="css/app-' + themeName + '.css">');
        } else {
            document.write('<link rel="stylesheet" id="theme-style" href="css/app.css">');
        }
    </script>

    <style>
        .logo img {
            width: 120px;
            height: auto;
            vertical-align: middle;
            margin-bottom: 20px;
        }
        .logo {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 10px;
            margin-top: 15px;
            margin-right: 30px;
        }
        .auth-title {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
            font-size: 24px;
        }
        .auth-content {
            max-width: 400px;
            margin: 0 auto;
            text-align: center;
        }
        .card {
            background-color: #fff;
            box-shadow: 1px 1px 5px rgba(126, 142, 159, 0.1);
            margin: 20px auto;
            padding: 20px;
            border-radius: 5px;
            border: none;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
        }
        .form-group input {
            width: 100%;
            padding: 10px;
            box-sizing: border-box;
        }
        .btn {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .btn:hover {
            background-color: #0056b3;
        }
        .clearfix::after {
            content: "";
            display: table;
            clear: both;
        }
        .pull-left {
            float: left;
        }
        .pull-right {
            float: right;
        }
    </style>
</head>
<body>
    <div class="auth">
        <div class="auth-container">
            <div class="card">
                <header class="auth-header">
                    <h1 class="auth-title">
                        <div class="logo">
                            <img src="../../static/img/logo black small .png" alt="Logo">
                        </div>
                        Reset Password
                    </h1>
                </header>
                <div class="auth-content">
                    <p class="text-center">PASSWORD RECOVER</p>
                    <p class="text-muted text-center">
                        <small>Enter your email address to recover your password.</small>
                    </p>
                    <form id="reset-form" action="/resetpassword" method="GET" novalidate>
                        <div class="form-group">
                            <label for="email1">Email</label>
                            <input type="email" class="form-control underlined" name="email1" id="email1" placeholder="Your email address" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-block btn-primary">Reset</button>
                        </div>
                        <div class="form-group clearfix">
                            <a class="pull-left" href="/login">Return to Login</a>
                            <a class="pull-right" href="/signup">Sign Up!</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Reference block for JS -->
    <div class="ref" id="ref">
        <div class="color-primary"></div>
        <div class="chart">
            <div class="color-primary"></div>
            <div class="color-secondary"></div>
        </div>
    </div>
