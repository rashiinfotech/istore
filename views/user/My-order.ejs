<%- include ("header.ejs") %>

<div class="container">
    <h1>My Order</h1>
    <% if (orders.length === 0) { %>
        <p>No orders found.</p>
    <% } else { %>
        <ul class="list-group">
            <% orders.forEach(order => { %>
                <li class="list-group-item">
                    <h4>Order ID: <%= order.id %></h4>
                    <p>Product: <%= order.product %></p>
                    <p>Price: <%= order.price %></p>
                    <p>Quantity: <%= order.quantity %></p>
                </li>
            <% }); %>
        </ul>
    <% } %>
</div>

